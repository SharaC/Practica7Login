<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:id="@+id/ru"
    android:background="#50BFD6"
    tools:context="com.example.sharita.practica7.Registrate">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:id="@+id/Layout"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/scrollView"
            android:layout_alignStart="@+id/scrollView">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Crea tu cuenta"
                android:textSize="42dp"
                android:layout_marginTop="10dp"
                android:textColor="#025F87"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:id="@+id/textView"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_width="300dp"
                android:layout_height="3dp"
                android:background="#025F87"
                android:layout_below="@+id/textView"></LinearLayout>



            <EditText
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:id="@+id/editText"
                android:hint="\tIngrese su Nombre "
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:background="@drawable/boton_redondeado"
                android:layout_marginTop="40dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="30dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/textView3"
                android:nestedScrollingEnabled="false"
                android:inputType="textAutoCorrect" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:id="@+id/editText2"
                android:layout_margin="10dp"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="20dp"
                android:hint="\tIngrese la Contraseña* "
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:background="@drawable/boton_redondeado"
                android:layout_below="@+id/editText"
                android:layout_centerHorizontal="true"
                android:inputType="numberPassword"
                android:maxLength="4" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:inputType="numberPassword"
                android:textAlignment="center"
                android:textSize="20dp"
                android:hint="Repetir contraseña"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:background="@drawable/boton_redondeado"
                android:ems="100"
                android:id="@+id/editText3"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:layout_below="@+id/editText2"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="50dp"
                android:maxLength="4" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*La contraseña debe contener 4 digitos\n"
                android:textSize="15dp"/>

            <Button
                android:layout_width="wrap_content"
                android:textSize="25dp"
                android:layout_height="wrap_content"
                android:text="\t Listo!  "
                android:textAlignment="center"
                android:textColor="@color/white"
                android:id="@+id/button"
                android:gravity="center"
                android:background="@drawable/boton_2"
                android:layout_gravity="bottom|right|end"
                android:onClick="listo" />

        </LinearLayout>


    </ScrollView>

</RelativeLayout>